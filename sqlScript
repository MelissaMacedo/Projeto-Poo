CREATE TABLE animais (
    id SERIAL PRIMARY KEY,
    nome VARCHAR(100) NOT NULL,
    especie VARCHAR(50) NOT NULL,
    raca VARCHAR(50) NOT NULL
);

INSERT INTO animais (nome, especie, raca) VALUES
('Rex', 'Cachorro', 'Labrador'),
('Frajola', 'Gato', 'Persa'),
('Nyx', 'Cachorro', 'Pastor');

SELECT * FROM animais;
